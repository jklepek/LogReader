<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<Tab fx:id="tab" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.TabController">
    <BorderPane>
        <top>
            <HBox spacing="5.0">
                <ComboBox fx:id="levelComboBox" promptText="Level filter">
               <padding>
                  <Insets right="5.0" />
               </padding></ComboBox>
                <ToggleButton fx:id="autoRefreshButton" onAction="#autoRefresh" text="Auto-refresh" />
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            </HBox>
        </top>
        <center>
            <TableView fx:id="tableView">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </center>
        <bottom>
            <GridPane hgap="10" vgap="10">
                <Label text="Stacktrace:" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets top="10.0" />
                    </GridPane.margin>
                </Label>
                <Button onAction="#copyStackTrace" text="Copy to clipboard" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets left="10.0" />
                    </GridPane.margin>
                </Button>
                <TextArea fx:id="textArea" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets bottom="10.0" right="10.0" />
                    </GridPane.margin>
                </TextArea>
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </bottom>
    </BorderPane>
</Tab>
