<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controllers.Controller">
    <top>
        <HBox>
            <children>
                <Button onAction="#openFile" text="Open File">
                    <HBox.margin>
                        <Insets right="5"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="settingsButton" onAction="#openSettings">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets left="5" top="5" right="5" bottom="5"/>
            </padding>
            <ProgressBar fx:id="progressBar" visible="false"/>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="tabPane"/>
    </center>
</BorderPane>
