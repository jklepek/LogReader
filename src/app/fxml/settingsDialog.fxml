<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="dialogPane"
            fx:controller="app.controllers.DialogController"
            prefHeight="100.0" prefWidth="600.0">
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Log directory" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="initialDirField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"/>
            <ImageView fx:id="dirErrorImageView" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Button fx:id="browseButton" onAction="#selectDir" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            <Label text="Auto-refresh interval (ms)" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="autoRefreshIntervalField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <ImageView fx:id="intervalErrorImageView" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
