<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<Tab xmlns="http://javafx.com/javafx"
     xmlns:fx="http://javafx.com/fxml"
     fx:controller="app.controllers.TabController">
    <BorderPane>
        <top>
            <HBox>
                <ComboBox fx:id="levelComboBox" promptText="Level filter"/>
                <ToggleButton fx:id="autoRefreshButton" text="Auto-refresh" onAction="#autoRefresh"/>
            </HBox>
        </top>
        <center>
            <TableView fx:id="tableView">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="Timestamp">
                        <cellValueFactory>
                            <PropertyValueFactory property="timestamp"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Level">
                        <cellValueFactory>
                            <PropertyValueFactory property="level"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Emitter">
                        <cellValueFactory>
                            <PropertyValueFactory property="emitter"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Message">
                        <cellValueFactory>
                            <PropertyValueFactory property="message"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </center>
        <bottom>
            <GridPane hgap="10" vgap="10">
                    <Label text="Stacktrace:" GridPane.columnIndex="0" GridPane.halignment="CENTER"
                           GridPane.rowIndex="0">
                        <GridPane.margin>
                            <Insets top="10.0"/>
                        </GridPane.margin>
                    </Label>
                    <Button onAction="#copyStackTrace" text="Copy to clipboard" GridPane.columnIndex="0"
                            GridPane.rowIndex="1" GridPane.valignment="TOP">
                        <GridPane.margin>
                            <Insets left="10.0"/>
                        </GridPane.margin>
                    </Button>
                    <TextArea fx:id="textArea" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                              GridPane.vgrow="ALWAYS">
                        <GridPane.margin>
                            <Insets bottom="10.0" right="10.0"/>
                        </GridPane.margin>
                    </TextArea>
            </GridPane>
        </bottom>
    </BorderPane>
</Tab>
